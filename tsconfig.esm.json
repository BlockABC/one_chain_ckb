{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "skipLibCheck": true
  }
}
